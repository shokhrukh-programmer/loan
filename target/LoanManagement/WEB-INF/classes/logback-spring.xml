<configuration>

    <!-- Appender for writing logs to a file -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Main log file location -->
        <file>logs/application.log</file>

        <!-- Rolling Policy: Combines time-based and size-based rolling -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Archive location and file name pattern -->
            <fileNamePattern>logs/archives/application-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- Maximum size for each log file -->
            <maxFileSize>10KB</maxFileSize>
            <!-- Retain logs for the last 30 days -->
            <maxHistory>30</maxHistory>
            <!-- Limit total size of archived logs -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <!-- Log format -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console appender for standard output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="ROLLING" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
